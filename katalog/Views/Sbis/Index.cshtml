@using katalog.ViewModels
@model CatalogViewModel
@{
    Layout = "_Layout";
}

<div>
    <p style="text-align: start">Каталог</p>
    <div>
        <input style="margin-bottom: 16px" type="text" name="search" placeholder="Название товара"/>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
        </svg>
    </div>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Категория
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="/">Все</a></li>
            @foreach (var item in Model.Categories)
            {
                <li><a class="dropdown-item" href="/@item.HierarchicalId">@item.Name</a></li>
            }
        </ul>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 g-2">
        @foreach (var item in Model.Products)
        {
            <div class="col">
                <div class="card shadow-sm">
                    @if (@item.Images != null)
                    {
                        string image = "/Image?url=" + item.Images.First();
                        <img style="height: 365px; aspect-ratio: 1.5/2" src="@image" />
                    }
                    else
                    {
                        <img style="height: 365px; aspect-ratio: 1.5/2" />
                    }
                    <div class="card-body" style="display: flex; flex-direction: column; align-items: start;">
                        <div class="pricediv">
                            <h4 style="text-align: start">@item.Name</h4>
                        </div>
                        <div class="pricediv">
                            <p>Цена:&nbsp;</p>
                            <p>@item.Cost р.</p>
                        </div>
                        <div class="pricediv">
                            <p>Остаток:&nbsp;</p>
                            <p>66 шт.</p>
                        </div>
                        <div class="pricediv">
                            <p>Код:&nbsp;</p>
                            <p>@item.NomNumber</p>
                        </div>
                        <div>
                            <p style="text-align: start">@item.DescriptionSimple</p>
                        </div>
                        <div style="display: flex; flex-direction: row; justify-content: space-between; width: 100%">
                            <button type="button" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                                </svg>
                                В корзину
                            </button>
                            <div>
                                <input style="width: 70px" type="number" id="count" name="count" min="1" value="1" required />
                                <label>шт.</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
